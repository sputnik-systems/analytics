}
dataset = pd.read_excel('/home/boris/Downloads/' + name + '.xlsx', dtype=dtype_dict)
dataset['КПП'] = dataset['КПП'].astype(str)
dataset['Начисления partner'] = dataset['Начисления partner'].fillna(0)
